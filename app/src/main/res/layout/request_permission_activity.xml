<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/spacing"
        android:showDividers="middle"
        android:divider="@drawable/divider"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/permission_welcome"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/permission_main_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/permission_data_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing"
            android:background="@drawable/background_enabled"
            android:textColor="@color/text"
            android:text="@string/permission_data_ok"
            android:textStyle="normal|italic"/>

        <Button
            android:id="@+id/permission_data_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_data_button"/>

        <Button
            android:id="@+id/permission_data_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_data_settings_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/permission_input_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing"
            android:background="@drawable/background_enabled"
            android:textColor="@color/text"
            android:text="@string/permission_input_ok"
            android:textStyle="normal|italic"/>

        <Button
            android:id="@+id/permission_input_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_input_settings_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/permission_help_info"/>

        <Button
            android:id="@+id/permission_help_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_help_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/permission_goodbye"/>

    </LinearLayout>

</ScrollView>
