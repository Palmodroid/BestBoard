<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

	<PreferenceCategory
		android:title="@string/prefs_descriptor">

		<EditTextPreference
			android:key="@string/descriptor_key"
			android:title="@string/descriptor_title"
			android:summary="@string/descriptor_summary"
			android:dialogTitle="@string/descriptor_dialog_title"
			android:dialogMessage="@string/descriptor_dialog_message"
			android:defaultValue="@string/descriptor_default" />

		<Preference
			android:key="@string/descriptor_reload_key"
			android:title="@string/descriptor_reload_title"
			android:summary="@string/descriptor_reload_summary" />

	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/prefs_drawing">

		<CheckBoxPreference
			android:key="@string/drawing_hide_upper_key"
			android:title="@string/drawing_hide_upper_title"
			android:summary="@string/drawing_hide_upper_summary"
			android:defaultValue="false" />

		<CheckBoxPreference
			android:key="@string/drawing_hide_lower_key"
			android:title="@string/drawing_hide_lower_title"
			android:summary="@string/drawing_hide_lower_summary"
			android:defaultValue="false" />

	</PreferenceCategory>






