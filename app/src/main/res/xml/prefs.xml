		android:title="@string/prefs_pressure">

		<EditTextPreference
			android:key="@string/pressure_key"
			android:inputType="numberDecimal"
			android:title="@string/pressure_title"
			android:summary="@string/pressure_summary"
			android:dialogTitle="@string/pressure_dialog_title" 
